<% if (typeof element === 'undefined') { element = []; } %>
<div class="card">
  <div class="card__image">
    <div class="imgWrapper-card">
      <picture>
        <source media="(min-width: 768px)" srcset="<%- element.serviceImg %>.jpg" width="335" height="170">
        <source media="(max-width: 767px)" srcset="<%- element.serviceImg %>-sp.jpg" width="335" height="170">
        <img src="image-large.jpg" alt="サービスイメージ" width="335" height="170">
      </picture>
      <div class="pictureText">
        <div class="serviceNumber"><%- element.serviceNumber %></div>
        <div class="serviceName"><%- element.serviceName %></div>
      </div>
    </div>
  </div>
  <div class="card__body">
    <p class="card__text">
      <%- element.serviceText %>
    </p>
    <%- include('../common/_readMoreButton', {link : element.serviceLink }) %>
  </div>
</div>